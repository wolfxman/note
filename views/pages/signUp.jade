include ../layout
block scripts
	script(src="/js/signUp.js")
block content
	.container
		.row
			div(style="width:450px;height:300px;border:1px solid #bbb;border-radius:5px;float:right;")
				form.form-horizontal(method="POST", action="")
					.form-group(style="height:45px;line-height:45px;margin-top:45px;")
						label.col-sm-3.control-label.height30(for="userName") 用户名
						.col-sm-8
							input.form-control#userName(type="text" name="userName" placeholder="用户名")
					.form-group(style="height:45px;line-height:45px;margin-top:45px;")
						label.col-sm-3.control-label.height30(for="password") 密码
						.col-sm-8
							input.form-control#password(type="password" name="password" placeholder="确认密码")
					.form-group(style="height:45px;line-height:45px;margin-top:45px;")
						label.col-sm-3.control-label.height30(for="rePassword") 确认密码
						.col-sm-8
							input.form-control#rePassword(type="password" name="rePassword" placeholder="确认密码")
					.form-group(style="height:45px;line-height:45px;margin-top:45px;text-align:center;")
						.col-sm-12
							button.btn.btn-info#signUp(type="button") 注册
