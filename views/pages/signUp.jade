include ../layout
include ../includes/header
block scripts
	script(src="/js/signUp.js")
block content
	.container
		.row
			div(style="width:100%;height:45rem;float:right;")
				form.form-horizontal(method="POST", action="")
					.form-group(style="height:7rem;line-height:7rem;margin-top:7rem;")
						.col-sm-12
							input.form-control#userName(type="text" name="userName" placeholder="用户名" style="height:7rem;line-height:7rem;font-size:4rem;")
					.form-group(style="height:7rem;line-height:7rem;margin-top:7rem;")
						.col-sm-12
							input.form-control#password(type="password" name="password" placeholder="确认密码" style="height:7rem;line-height:7rem;font-size:4rem;")
					.form-group(style="height:7rem;line-height:7rem;margin-top:7rem;")
						.col-sm-12
							input.form-control#rePassword(type="password" name="rePassword" placeholder="确认密码" style="height:7rem;line-height:7rem;font-size:4rem;")
					.form-group(style="height:7rem;line-height:7rem;margin-top:7rem;text-align:center;")
						.col-sm-12
							button.btn.btn-info.col-sm-6#signIn(type="button" style="float:none;font-size:4rem;") 注册
