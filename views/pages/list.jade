include ../layout
include ../includes/header
block scripts
	script(src="/js/list.js")
block content
	.container
		.row
			.panel.panel-default.full-width
				.panel-body.full-width(style="text-align:right;")
					label.control-label
						button.btn.btn-info#addNew(style="font-size:4rem;") 新增
	.container(style="overflow:auto;height:120rem;")
		.row
			each item in items
				.panel.panel-default.full-width(style="font-size:4rem;")
					.panel-body.full-width
						div
							label.control-label 主题
							span(style="margin-left:1rem;") #{item.title}
						div
							label.control-label 创建时间
							span(style="margin-left:1rem;") #{moment(item.meta.createAt).format('YYYY-MM-DD hh:mm:ss')}
						div
							label.control-label 内容
							span(style="margin-left:1rem;") #{item.content}
						div(style="text-align:right;")
							button.btn.btn-info.edit(type="button", data-id="#{item._id}" style="font-size:3rem;") 编辑
							button.btn.btn-danger.del(type="button", data-id="#{item._id}" style="font-size:3rem;margin-left:2rem;") 删除
