extends ../layout

block content
	.container
		.row
			table.table.table-bordered.table-hover
				thead
					tr
						th 主题
						th 创建时间
						th 内容
						th 操作
				tbody
					each item in items
						tr(class="item_id_#{item._id}")
							td #{item.title}
							td #{item.createAt}
							td #{item.content}
							td
								button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除